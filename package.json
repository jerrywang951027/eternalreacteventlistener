{
  "name": "salesforceIndustriesExplorer",
  "engines": {
    "node": "24.x",
    "npm": ">=10.0.0"
  },
  "version": "1.0.0",
  "description": "A React and Node.js full stack application for exploring Salesforce Industries (OmniStudio) components and platform events",
  "main": "index.js",
  "scripts": {
    "dev": "cd server && npm run dev",
    "start": "cd server && npm start",
    "build": "cd client && npm run build && cd ../server && npm start",
    "heroku-postbuild": "cd server && npm install && cd ../client && npm install && npm run build",
    "debug": "cd server && node --inspect index.js",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:salesforce": "playwright test salesforce-login.spec.js",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:client": "cd client && npm test",
    "legacy:dev": "concurrently \"npm run legacy:server\" \"npm run legacy:client\"",
    "legacy:server": "cd server && npm run dev",
    "legacy:client": "cd client && npm start"
  },
  "keywords": [
    "react",
    "nodejs",
    "fullstack",
    "salesforce",
    "omnistudio",
    "platform-events",
    "sobjects",
    "redis",
    "order-management"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/mcp": "^0.0.35",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.55.0"
  }
}
